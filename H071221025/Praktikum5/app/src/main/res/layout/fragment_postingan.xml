<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".Fragment.PostinganFragment">

    <RelativeLayout
        android:id="@+id/rv_header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#1a1a32">

        <TextView
            android:layout_width="335dp"
            android:layout_height="40dp"
            android:text="Add Post"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_gambar"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="250dp"
        android:src="@drawable/camera"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tv_konten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_gambar"
        android:layout_gravity="center"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_konten"
        android:layout_width="406dp"
        android:layout_height="100dp"
        android:layout_below="@id/tv_konten"
        android:layout_marginStart="5dp"
        android:hint="Masukkan Konten..."
        android:inputType="textMultiLine"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@color/white"/>

    <Button
        android:id="@+id/btn_posting"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_konten"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#1a1a32"
        android:text="ADD POST"
        android:textColor="@color/white"
        android:textSize="20sp"/>

</RelativeLayout>